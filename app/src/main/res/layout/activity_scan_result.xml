<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jule.sinlov.scancode.view.scan.ScanResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_act_scan_result_open_camera"
            android:layout_width="match_parent"
            android:text="@string/btn_act_scan_result_open"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_act_scan_result_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_act_scan_result_open_camera"
            android:gravity="center"
            android:text="@string/tv_act_scan_result_hint"/>
    </RelativeLayout>


</ScrollView>
